@model BooksEntity
@{
    ViewData["Title"] = "Adding New Book";
}

<form asp-action="CreateBook" asp-controller="Book" method="post">
    <div class="form-group">
        <label>Book Title</label>
        <input asp-for="Title" type="text" class="form-control" placeholder="Title">
       
    </div>
    <div class="form-group">
        <label>Author</label>
        <input asp-for="Author" type="text" class="form-control" required placeholder="Author">
    </div>
    <div class="form-group">
        <label>ISBN Number</label>
        <input asp-for="ISBN" type="text" class="form-control" required placeholder="ISBN Number">
    </div>

    <div class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
    
    <button type="submit" class="btn btn-primary">Create Book</button>
    <a asp-action="Index" asp-controller="Book" class="btn btn-secondary">Cancel</a>
</form>